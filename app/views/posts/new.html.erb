<%= form_for @post do |f| %>

    <%= f.text_field :title %>
    <%= f.text_area :content %>
    <%= f.collection_check_boxes :category_ids, @categories, :id, :name %>
    <%= f.fields_for :categories, @post.categories.build do |c| %> 
        <%= c.text_field :name %>
    <% end %>
    <%= f.submit %>

<% end %>